<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Listing Details: </h3>
        </div>
        <div class="card col-6 offset-2 mt-3">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <br>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <%= listing.description %><br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                    <%= listing.location %><br>
                    <%= listing.country %><br>
                </p>
            </div>
        </div>
        <div class="btns">
            <form action="/listing/<%= listing._id %>/edit" method="get" class="col-1">
                <button class="show-edit-btn btn btn-dark mb-3">Edit</button>
            </form>
            <br>
            <form action="/listing/<%= listing._id %>?_method=DELETE" method="post" class="col-1">
                <button class="show-edit-btn btn btn-dark mb-3">Delete</button>
            </form>
        </div>
    </div>
</body>